# ================================
# PharmaCare Environment Variables
# Copy this file to .env and fill in your values
# ================================

# MongoDB Connection
# For Railway/Production: Use MongoDB Atlas
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/pharmacare?retryWrites=true&w=majority

# JWT Secret (use a complex random string)
JWT_SECRET=your_jwt_secret_key_here

# GHN (Giao HÃ ng Nhanh) API Configuration
GHN_TOKEN=your_ghn_token
GHN_SHOP_ID=your_shop_id

# PayPal (optional - only needed for PayPal payment)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_secret
PAYPAL_MODE=sandbox

# Gemini AI API (for chatbot)
GEMINI_API_KEY=your_gemini_api_key

# Node Environment
NODE_ENV=production

# Application Port
PORT=3000

# Application URL (for CORS, etc.)
APP_URL=https://plinhmeme.id.vn

# Nitro Preset (node-server for Railway/Docker, vercel for Vercel)
NITRO_PRESET=node-server
