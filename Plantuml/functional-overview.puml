@startuml
' Functional overview of PharmaCare web app (non-AI)
skinparam rectangle { BackgroundColor white BorderColor black }
skinparam packageStyle rectangle
skinparam defaultTextAlignment center

title PharmaCare Functional Map (Core Modules)

left to right direction

package "Foundation" {
  rectangle "Auth & Users\n(Login, JWT, Roles)" as Auth
  rectangle "Settings & Appearance" as Settings
  rectangle "Navigation & Shortcuts" as Nav
}

package "Catalog" {
  rectangle "Medicine Master\n(Category/Type/Unit)" as Medicine
  rectangle "Supplier Registry" as Supplier
  rectangle "Customer Registry" as Customer
  rectangle "Bank & QR Payment" as Bank
}

package "Inventory" {
  rectangle "Purchasing\n(Purchase Orders)" as Purchase
  rectangle "Stock Batches\n(Expiry, Pricing)" as Stock
  rectangle "Returns (Supplier/Customer)" as Returns
}

package "Sales" {
  rectangle "POS / Invoice\n(Shift-aware)" as Invoice
  rectangle "Voucher & Discount" as Voucher
  rectangle "Shipping (GHN)" as Shipping
  rectangle "Reports\n(Shift Closing, Expiring)" as Reports
}

package "Experience" {
  rectangle "Dashboard Widgets" as Dashboard
}

Auth --> Settings
Nav --> Medicine
Nav --> Invoice
Medicine --> Stock
Supplier --> Purchase
Purchase --> Stock
Stock --> Invoice
Invoice --> Shipping
Invoice --> Voucher
Invoice --> Reports
Customer --> Invoice
Returns --> Stock
Reports --> Shift

@enduml
